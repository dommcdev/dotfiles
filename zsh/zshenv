export EDITOR="nvim"
export VISUAL="nvim" #Fallback for editor
export PATH="$HOME/.local/bin:$PATH"
export PATH="$HOME/.local/share/npm-global/bin:$PATH"
export ZDOTDIR="$HOME/.config/zsh"
export ANDROID_HOME="$HOME/programs/Android/Sdk"

# The following only initializes brew vars if brew is installed AND 
# said vars have not already been exported for the current session
if [[ -x "/home/linuxbrew/.linuxbrew/bin/brew" ]]; then
    if [[ -z "$HOMEBREW_PREFIX" ]]; then
        export HOMEBREW_PREFIX="/home/linuxbrew/.linuxbrew";
        export HOMEBREW_CELLAR="/home/linuxbrew/.linuxbrew/Cellar";
        export HOMEBREW_REPOSITORY="/home/linuxbrew/.linuxbrew/Homebrew";
        fpath[1,0]="/home/linuxbrew/.linuxbrew/share/zsh/site-functions";
        export PATH="/home/linuxbrew/.linuxbrew/bin:/home/linuxbrew/.linuxbrew/sbin${PATH+:$PATH}";
        [ -z "${MANPATH-}" ] || export MANPATH=":${MANPATH#:}";
        export INFOPATH="/home/linuxbrew/.linuxbrew/share/info:${INFOPATH:-}";
    fi
fi


