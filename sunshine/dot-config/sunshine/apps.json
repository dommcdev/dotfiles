{
    "apps": [
        {
            "auto-detach": true,
            "exclude-global-prep-cmd": false,
            "exit-timeout": 5,
            "image-path": "desktop.png",
            "name": "Desktop",
            "prep-cmd": [
                {
                    "do": "hyprctl keyword input:kb_options \"\"",
                    "undo": "hyprctl reload"
                },
                {
                    "do": "hyprctl output create headless sunshine-stream",
                    "undo": "hyprctl output remove sunshine-stream"
                }
            ],
            "wait-all": true
        }
    ],
    "env": {
        "PATH": "$(PATH):$(HOME)/.local/bin"
    }
}