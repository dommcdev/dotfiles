// This configuration is merged with the default vicinae configuration file, which you can obtain by running the `vicinae config default` command.
// Every item defined in this file takes precedence over the values defined in the default config or any other imported file.
//
// You can make manual edits to this file, however you should keep in mind that this file may be written to by vicinae when a configuration change is made through the GUI.
// When that happens, any custom comments or formatting will be lost.
//
// If you want to maintain a configuration file with your own comments and formatting, you should create a separate file and add it to the 'imports' array.
//
// Learn more about configuration at https://docs.vicinae.com/config

{
   "$schema": "https://vicinae.com/schemas/config.json",
   "close_on_focus_loss": false,
   "theme": {
      "dark": {
         "name": "catppuccin-mocha",
         "icon_theme": "Papirus-Dark"
      }
   },
   "launcher_window": {
      "opacity": 0.9,
      "client_side_decorations": {
         "enabled": true,
         "rounding": 10,
         "border_width": 2
      }
   },
   "favorites": ["core:search-emojis", "clipboard:history"],
   "providers": {
      "applications": {
         "preferences": {
            "launchPrefix": " ",
            "paths": [
               "/home/dominic/.local/share/applications",
               "/var/lib/flatpak/exports/share/applications",
               "/usr/share/applications"
            ]
         }
      },
      "clipboard": {
         "entrypoints": {
            "clear": {
               "enabled": false
            }
         }
      },
      "core": {
         "enabled": true,
         "entrypoints": {
            "about": {
               "enabled": false
            },
            "documentation": {
               "enabled": true
            },
            "inspect-local-storage": {
               "enabled": false
            },
            "keybind-settings": {
               "enabled": false
            },
            "list-extensions": {
               "enabled": false
            },
            "manage-fallback": {
               "enabled": false
            },
            "oauth-token-store": {
               "enabled": false
            },
            "open-config-file": {
               "enabled": false
            },
            "open-default-config": {
               "enabled": false
            },
            "refresh-apps": {
               "enabled": false
            },
            "reload-scripts": {
               "enabled": false
            },
            "report-bug": {
               "enabled": false
            },
            "search-emojis": {
               "enabled": true
            },
            "settings": {
               "enabled": true
            },
            "sponsor": {
               "enabled": false
            },
            "store": {
               "enabled": false
            }
         }
      },
      "developer": {
         "enabled": false
      },
      "files": {
         "entrypoints": {
            "rebuild-index": {
               "enabled": false
            }
         }
      },
      "font": {
         "enabled": true
      },
      "manage-shortcuts": {
         "enabled": false
      },
      "power": {
         "enabled": true,
         "entrypoints": {
            "hibernate": {
               "enabled": false
            },
            "logout": {
               "enabled": false
            },
            "power-off": {
               "enabled": true
            },
            "reboot": {
               "enabled": true
            },
            "sleep": {
               "alias": "suspend",
               "enabled": true,
               "preferences": {
                  "confirm": false
               }
            },
            "soft-reboot": {
               "enabled": false
            },
            "suspend": {
               "enabled": false
            }
         }
      },
      "raycast-compat": {
         "enabled": false
      },
      "theme": {
         "enabled": false
      },
      "wm": {
         "enabled": false
      }
   }
}

