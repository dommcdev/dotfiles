echo_in_style() {
  echo "$1" | tte --canvas-width 0 --anchor-text c --frame-rate 640 print
}

clear
echo
tte -i ~/dev/dotfiles/screensaver/logo.txt --canvas-width 0 --anchor-text c --frame-rate 920 laseretch
echo
echo_in_style "Finished installing"

if sudo test -f /etc/sudoers.d/99-dotfiles-installer; then
  sudo rm -f /etc/sudoers.d/99-dotfiles-installer &>/dev/null
fi

# Exit gracefully if user chooses not to reboot
if gum confirm --padding "0 0 0 $((PADDING_LEFT + 32))" --show-help=false --default --affirmative "Reboot Now" --negative "" ""; then
  clear
  sudo reboot 2>/dev/null
fi
